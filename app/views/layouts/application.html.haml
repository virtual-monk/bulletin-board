!!!
%html{lang: "en"}
  %head
    %title= "Wassup?"
    %meta{charset: "utf-8"}/
    %meta{content: "width=device-width, initial-scale=1.0", name: "viewport"}
    %meta{content: "initial-scale=1,maximum-scale=1,user-scalable=no", name: "viewport"}/
    %link{:href => "images/icons/1-favicon.ico", :rel => "shortcut icon", :type => "image/ico"}
    %link{href: "https://api.tiles.mapbox.com/mapbox.js/v2.1.8/mapbox.css", rel: "stylesheet"}
    %link{href: "http://cdn.leafletjs.com/leaflet-0.7.3/leaflet.css", rel: "stylesheet"}
    = stylesheet_link_tag    "application"
    = javascript_include_tag "vendor/modernizr"
    = csrf_meta_tags
  %nav.top-bar
    %ul.title-area
      %li.name
        %h1
          %a{href: "/", id: "sup"} Wassup?
    %section.top-bar-section#this
      %ul
        %li= link_to 'featured', events_path, class: "radius button large "
        %li= link_to 'calendar', calendar_path, class: "radius button tiny "
        %li= link_to 'map', '/map',class: "radius button tiny "
    %section.top-bar-section
      %ul.right
        - if current_user
          %li= link_to 'My Events', '/profile', class: "radius button tiny nav-buttons"
          %li= link_to 'Add Event', new_event_path, class: "radius button tiny"
          %li= link_to 'Sign Out', destroy_user_session_path, method: :delete, class: "radius button tiny "
        - else
          %li= link_to 'Sign Up', new_user_registration_path, class: "radius button tiny "
          %li= link_to 'Sign In', new_user_session_path, class: "radius button tiny "
  %p.notice= notice
  %p.alert= alert
  %body
    = yield

    %script{src: "/assets/javascripts/form_event.js"}
    = javascript_include_tag "application"
