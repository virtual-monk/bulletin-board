  %p.alert= alert
  %body
    = yield

    %script{:src => "http://cdn.leafletjs.com/leaflet-0.7.3/leaflet.js"}
    %script{:src => "https://api.tiles.mapbox.com/mapbox.js/v2.1.8/mapbox.js"}
    = javascript_include_tag "application"
