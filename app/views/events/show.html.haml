.row
  .columns
    .panel.white-text#dark-panel
      .row
        .large-4.columns
          -binding.pry
          = image_tag @event.event_photo
        .large-8.columns
          .row
            .medium-8.columns
              %h3
                .white-text
                  = @event.title
              = @event.category.category
            .medium-4.columns
              #mini_map
                = image_tag "http://maps.google.com/maps/api/staticmap?size=450x300&sensor=false&zoom=16&markers=#{@event.latitude}%2C#{@event.longitude}"
          .row
            .medium-8.columns
              %span
                .event_date
                  #{@event.date}
                .event_time
                  = @event.start_time.strftime("%I:%M%p") + " - " + @event.end_time.strftime("%I:%M%p")
            .medium-4.columns.grey-text
              .event_where.text-right
                %div
                  #{@event.address}
                %div
                  = @event.address_2
                %div
                  = @event.city
                  , #{@event.state}
                %div
                  = @event.zip_code

          .row
            .large-10.columns
              %div
                Details: #{@event.details}
      .row
        .columns
          .rows
            .large-4.columns
              - if @event.likes.count == 1
                = "#{@event.likes.count} person likes this event"
              - else
                = "#{@event.likes.count} people like this event"
              - if current_user
                = link_to "Like event", event_likes_path(@event), method: :post
                - if @event.owner_or_admin?(current_user)
                  %div
                  = link_to "Edit event", edit_event_path(@event)
                  %div
                  = link_to "Delete event", event_path(@event), method: :delete
